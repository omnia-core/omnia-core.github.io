source "https://rubygems.org"

# Jekyll
gem "jekyll", "~> 4.3"

# Windows-specific
gem 'wdm', '>= 0.1.0' if Gem.win_platform?

# Plugins
group :jekyll_plugins do
    gem 'jekyll-feed'
    gem 'jekyll-sitemap'
    gem 'jekyll-paginate'
    gem 'jekyll-seo-tag'
    gem 'jekyll-archives'
    gem 'kramdown'
    gem 'rouge'
end
